doctype 5
html(lang="en")
  head
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(charset='utf-8')
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel='shortcut icon', href='/img/favicon.ico')
    if locals.title
      title #{title} - Cavendish Labs Web Services | St. Petersburg/Treasure Island, FL
    else
      title Cavendish Labs Web Services | St. Petersburg/Treasure Island, FL
    link(rel='stylesheet', href='/css/main.css')

    if locals.env === 'production'
      script(data-main='js/main-built', src='/js/libs/require.js')
    else
      script(data-main='js/main', src='/js/libs/require.js')
  body
    #notification
    block content
    include footer

